<Page
    x:Class="VješaloXD.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VješaloXD"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="Play" Foreground="White"  Background="black" Content="Play" Margin="0,334,0,0" VerticalAlignment="Top" Height="166" Width="392" HorizontalAlignment="Center" FontSize="72" Click="Play_Click" ClickMode="Release" AllowDrop="True" Padding="7,4,8,5" FontWeight="Bold" FontStyle="Normal"/>
        <Button x:Name="Quit" Foreground="white" Background="black" Content="Quit" Margin="0,547,0,0" VerticalAlignment="Top" Height="166" Width="392" HorizontalAlignment="Center" FontSize="72" Click="Quit_Click" FontWeight="Bold"/>
        <MediaElement x:Name="MediaPlayer" IsLooping="True" Source="Assets/music.mp3" AudioCategory="BackgroundCapableMedia" AutoPlay="True" />
        <Image Source="assets/htitle.jpg" Margin="617,24,617,744"/>
        <Image Source="assets/ph1.jpg" HorizontalAlignment="Left" Margin="109,312,0,133" Width="539"/>
    </Grid>
</Page>
